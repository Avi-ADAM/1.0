{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "strict": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./src/lib/types"
    ],
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "extends": "./.svelte-kit/tsconfig.json",
  "exclude": ["dist", ".mastra", "node_modules"],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "service-worker.js",
    "src/lib/func/animation.ts",
    "src/lib/types/**/*"
  ]
}
